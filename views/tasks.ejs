<!-- views/tasks.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>
<body class="container">

<header>
    <% include ./partials/header %>
</header>

<main>
    <div class="jumbotron">
        <h1>Rendezvous'18</h1>
        <p>CAP Portal</p>

        <% if (!user) { %>
		  	<!-- <div style="width:500px;height:180px;background-color:#ececec;padding:80px;margin-left:22%;margin-top:9%;"> -->
				<h2 style="font-size:40px;">Welcome! Please log in.</h2>
				<a href="/capPortal/auth/facebook"><img src="fb-login.jpg" width="151" height="24"></a>
			<!-- </div> -->
		<% } else { %>
			<!-- <h2>Hello, <%= user.displayName %>.</h2> -->
			<h1>Tasks</h1>
			<!-- <table> -->
			<% for(var i=0; i < tasks.length; i++) { %>
			   <tr>
			     <!-- <td><%= tasks[i].task_id %></td> -->
			     <!-- <td><%= tasks[i].task_desc %></td> -->
			     <div class="well">
			     	<!-- <hr> -->
			     	<h2><%= tasks[i].task_id %></h2>
			     	<hr>
			     	<p><%= tasks[i].task_desc %></p>
			     	<form method="post" action="/capPortal/submission">
			     		<input type="hidden" name="task_id" id="task_id" value="<%= tasks[i].task_id %>">
			     		<button type="submit">Submit</button>
			     	</form>
			     </div>
			   </tr>
			<% } %>
			<!-- </table> -->
		<% } %>

    </div>
</main>

<footer>
    <% include ./partials/footer %>
</footer>

</body>
</html>
