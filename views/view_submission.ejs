<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>
<body class="container">

<header>
    <% include ./partials/header %>
</header>

<main>
    <div class="jumbotron">
        <h1>Rendezvous'18</h1>
        <p>CAP Portal</p>

        <% if (!user) { %>
		  	<!-- <div style="width:500px;height:180px;background-color:#ececec;padding:80px;margin-left:22%;margin-top:9%;"> -->
				<h2 style="font-size:40px;">Welcome! Please log in.</h2>
				<a href="/capPortal/auth/facebook"><img src="fb-login.jpg" width="151" height="24"></a>
			<!-- </div> -->
		<% } else { %>
			<h2>View Submissions</h2>
			<h3>user_id : <%= user_id %></h3>
			<h3>task_id : <%= task_id %></h3>
			<img src=<%= "submissions/" + user_id + "_" + task_id + ".png" %>><br>
			<form method="POST" action="/capPortal/approve">
				<input type="hidden" id="user_id" name="user_id" value=<%= user_id %> >
				<input type="hidden" id="task_id" name="task_id" value=<%= task_id %> >
				<button type="submit" value="submit">Approve</button>
			</form>
		<% } %>

    </div>
</main>

<footer>
    <% include ./partials/footer %>
</footer>

</body>
</html>
